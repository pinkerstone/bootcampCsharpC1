<Window x:Class="CodigoClase23_10_2024.WindowsMantenimientoUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodigoClase23_10_2024"
        mc:Ignorable="d"
        Title="WindowsMantenimientoUsuarios" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0">
            <TextBlock Text="Nombre" Margin="5"/>
            <TextBox x:Name="txtNombres" Margin="5"/>

            <TextBlock Text="Apellidos" Margin="5"/>
            <TextBox x:Name="txtApellidos" Margin="5"/>

            <TextBlock Text="Correo" Margin="5"/>
            <TextBox x:Name="txtCorreo" Margin="5"/>

            <Button x:Name="btnRegistrar" Content="Registrar usuario" Margin="5" HorizontalContentAlignment="Center" Height="25" Click="btnRegistrar_Click"/>
        </StackPanel>
        <DataGrid x:Name="dgUsuariosRegistrados" Margin="5" Grid.Row="1">
        </DataGrid>
    </Grid>
</Window>
