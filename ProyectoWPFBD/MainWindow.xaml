<Window x:Class="ProyectoWPFBD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoWPFBD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="txtNombre" Height="20" Width="200"></TextBox>
            <Button x:Name="btnBuscar" Content ="Buscar Categoria" Click="btnBuscar_Click" Height="20" Width="200"></Button>
            <DataGrid x:Name="dgCategorias"></DataGrid>
        </StackPanel>

    </Grid>
</Window>
